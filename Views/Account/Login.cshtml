@model LoginViewModel
@{
    string strTitle = "Вход в личный кабинет";
    ViewBag.Title = strTitle;
}
    <div class="mainTAJIK">
        <div class="main-log">
            <form asp-area="" asp-controller="Account" asp-action="Login" method="post" asp-route-returnUrl="@ViewBag.ReturnUrl">
                <h1>Добро пожаловать</h1>
                <div class="input-box">                    
                <input asp-for="UserName" placeholder="Логин" />
                    
                </div>
                <div class="input-box">
                <input asp-for="Password" placeholder="Пароль" />
                    
                </div>
                <div class="remember">
                    <label asp-for="RememberMe"> </label>
                    <input asp-for="RememberMe" />
                    <span asp-validation-for="RememberMe"></span>
                    <a href="#">Забыли пароль?</a>
                </div>
                <button type="submit">Войти</button>
                <div asp-validation-summary="All"> </div>
                <div class="register-link">
                    <p>Нет аккаунта? <a href="#">Регистрация</a></p>
                </div>
            </form>
        </div>
    </div> 
